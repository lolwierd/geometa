{
  "name": "geometa-backend",
  "version": "1.0.0",
  "description": "Standalone API server for GeoMeta Gallery",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:init": "tsx src/scripts/init-db.ts",
    "test": "vitest run",
    "lint": "eslint src --ext .ts,.js"
  },
  "keywords": [
    "api",
    "express",
    "geoguessr",
    "backend"
  ],
  "author": "GeoMeta Gallery",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "countries-list": "^3.1.1",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "clsx": "^2.1.1",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.0",
    "tailwind-merge": "^3.3.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
